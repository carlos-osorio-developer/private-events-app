<p>
  <strong>Name:</strong>
  <em><%= @user.name %></em>
</p>

<p>
  <strong>Email:</strong>
  <em><%= @user.email %></em>
</p>

<p>
  <strong>Hosted events:</strong>
  <ul>
  <% @user.events.each do |event| %>
    <li><%= link_to event.name, event %></li>
  <% end %>
  </ul>
</p>

<p>
  <strong>Attended events:</strong>
  <br><br>
  <span>Past events</span>
  <ul>
  <% @user.attended_events.where("date < '#{Time.now}'").each do |past_event| %>    
    <li><%= link_to past_event.name, past_event %></li>
  <% end %>
  </ul>
  <span>Future events</span>
  <ul>
  <% @user.attended_events.where("date >= '#{Time.now}'").each do |future_event| %>    
    <li><%= link_to future_event.name, future_event %></li>
  <% end %>
  </ul>
</p>

<% if current_user == @user %>
  <td><%= link_to 'Edit', edit_user_registration_path %></td>
<% end %>