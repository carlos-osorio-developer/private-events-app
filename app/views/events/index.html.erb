<h1>Events</h1>
<br>
<strong>Past Events</strong>
<br><br>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th> 
    <th>Date</th>
    <th>Assistants</th>
  </tr>
  <% @events.past.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.info %></td>
      <td><%= event.date %></td>
      <td><%= link_to event.attendees.count, event %></td>
    </tr>
  <% end %>
</table>
<br>
<strong>Future Events</strong>
<br><br>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th> 
    <th>Date</th>
    <th>Assistants</th>
  </tr>
  <% @events.future.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.info %></td>
      <td><%= event.date %></td>
      <td><%= link_to event.attendees.count, event %></td>
    </tr>
  <% end %>
</table>
<br>
